{{>header}}
{{>navigation/game/top}}
<div class="container">
    <div class="panel panel-default">


        <div class="panel-body">

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10" style="text-align: center"><a href="game/map/{{upY}}/{{upX}}" class="map-arrow glyphicon glyphicon-chevron-up"></a></div>
                <div class="col-md-1"></div>
            </div>
            <div class="row" style="height:{{height}}px">
                <div class="col-md-1" style="line-height:{{height}}px"> <a  href="game/map/{{leftY}}/{{leftX}}" class="map-arrow glyphicon glyphicon-chevron-left"></a></div>
                <div id="viewport" class="col-md-10" style="height:100%">


                    <div id="map" style="position: absolute;top:{{top}}px;left:{{left}}px;width:{{width}}px;height:{{height}}px">
                        {{#tiles}}
                        <div class="sprite {{name}}" data-x="{{x}}" data-y="{{y}}" style="position: absolute;top:{{top}}px;left:{{left}}px;">({{y}}/{{x}})</div>
                        {{/tiles}}

                        {{#cities}}
                        <div class="sprite city1" data-x="{{x}}" data-y="{{y}}" style="position: absolute;top:{{top}}px;left:{{left}}px;">{{name}}({{y}}/{{x}})</div>
                        {{/cities}}
                    </div>


                </div>
                <div class="col-md-1" style="line-height:{{height}}px"><a href="game/map/{{rightY}}/{{rightX}}" class="map-arrow glyphicon glyphicon-chevron-right"></a></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10"  style="text-align: center"><a href="game/map/{{downY}}/{{downX}}" class="map-arrow glyphicon glyphicon-chevron-down"></a></div>
                <div class="col-md-1"></div>
            </div>

        </div>
    </div>
</div>
{{>footer}}